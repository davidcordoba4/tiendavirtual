{
  "compileOnSave": false,
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES6",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "esnext",
    "paths": {
      "core-js/es7/reflect": [
        "node_modules/core-js/proposals/reflect-metadata"
      ],
      "core-js/es6/": [
        "node_modules/core-js/es/"
      ]     
    },
    "types": [
      "hammerjs"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "build",
    "docs",
    "functional-tests",
    "**/.cache-loader/*"
  ]
}